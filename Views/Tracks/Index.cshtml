@model IEnumerable<Assignment5.ViewModels.TrackBaseViewModel>

@{
    ViewBag.Title = "Tracks";
    var userAccount = new Assignment5.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2 style="text-align: center">@ViewBag.Title</h2>

<table class="table table-borderless table-striped" style="table-layout: fixed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Tracks", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                @if (userAccount.HasRoleClaim("Clerk"))
                {
                    @Html.ActionLink("Delete", "Delete", "Tracks", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                }
            </td>
        </tr>
    }

</table>
