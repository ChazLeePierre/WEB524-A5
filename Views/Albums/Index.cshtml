@model IEnumerable<Assignment5.ViewModels.AlbumBaseViewModel>

@{
    ViewBag.Title = "Albums";
}

<h2 style="text-align: center">@ViewBag.Title</h2>

<table class="table table-borderless table-striped" style="table-layout: fixed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Coordinator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <img src="@item.UrlAlbum" alt="@item.Name" style="width:100%; max-width:150px" />
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Albums", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>
